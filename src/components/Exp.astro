---
import ExpItem from "./ExpItem.astro";

import Express from "../icons/Express.astro";
import Flask from "../icons/Flask.astro";
import JS from "../icons/JS.astro";
import NodeJS from "../icons/NodeJS.astro";
import Postgre from "../icons/Postgre.astro";
import React from "../icons/React.astro";
import Redux from "../icons/Redux.astro";
import Sequelize from "../icons/Sequelize.astro";
import Django from "../icons/Django.astro";
import SQLite from "../icons/SQLite.astro";
import Powershell from "../icons/Powershell.astro";
import SQL from "../icons/SQL.astro";
import Svelte from "../icons/Svelte.astro";
